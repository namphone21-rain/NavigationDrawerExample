<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.examplecode.rain.navigationdrawerexample.LearnToOrderFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:textColor="#000000"
        android:background="#ffffff"
        android:padding="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to Pronounce" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:padding="2dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:textSize="11dip"
            android:id="@+id/drinksCheckBox"
            android:text="Drinks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <CheckBox
            android:textSize="11dip"
            android:id="@+id/quickMealCheckBox"
            android:text="Quick Meal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <CheckBox
            android:textSize="11dip"
            android:text="Norteastern"
            android:id="@+id/esaarnCheckBox"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/updateButton"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textSize="11dip"
            android:text="update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
